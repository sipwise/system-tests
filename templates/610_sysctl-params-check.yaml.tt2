[%
  PROCESS '/usr/lib/ngcp-ngcpcfg/get_hostname';
  hostname = out;

  argv.host = hostname;
  argv.role = 'proxy';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_proxy = out;
-%]
[% PERL -%]
    my $node_state = qx(ngcp-check-active -v);
    chomp $node_state;

    $stash->set(node_state => $node_state);
[% END -%]

kernel-param:
  sunrpc:
    value: true
[% IF is_proxy && node_state == 'active' && rtpproxy.enabled == "yes" -%]

  xt_RTPENGINE:
    value: true
[% END -%]
