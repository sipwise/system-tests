[%
  PROCESS '/usr/lib/ngcp-ngcpcfg/get_hostname';
  hostname = out;

  argv.host = hostname;
  argv.role = 'proxy';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_proxy = out;
-%]
[% PERL -%]
    my $node_state = qx(ngcp-check-active -v);
    chomp $node_state;

    $stash->set(node_state => $node_state);
[% END -%]

command:

[% IF is_proxy && asterisk.enabled == "yes" && node_state == 'active' -%]
  asterisk -rx "odbc show":
    exit-status: 0
    stdout:
    - "/Number of active connections: 1/"
    stderr: []
    timeout: 10000

[% ELSE -%]
  echo "The test for active node with enabled asterisk and proxy role only":
    exit-status: 0
    stdout: []
    stderr: []
    timeout: 10000

[% END -%]