[%
  PROCESS '/usr/lib/ngcp-ngcpcfg/get_hostname';
  hostname = out;

  argv.host = hostname;
  argv.role = 'proxy';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_proxy = out;

  argv.host = hostname;
  argv.role = 'lb';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_lb = out;

  argv.host = hostname;
  argv.role = 'mgmt';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_mgmt = out;

  argv.host = hostname;
  argv.role = 'db';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_db = out;

  argv.host = hostname;
  argv.role = 'rtp';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_rtp = out;

  argv.role = 'li';
  PROCESS '/usr/lib/ngcp-ngcpcfg/has_role';
  is_li = out;
  is_li_enabled = is_li && cluster_sets.type == 'distributed' && intercept.enable == 'yes';
-%]
[% PERL -%]
    my $node_state = qx(ngcp-check-active -v);
    chomp $node_state;

    $stash->set(node_state => $node_state);
[% END -%]

service:
[% IF asterisk.enable == "yes" -%]

  asterisk.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF intercept.enable == "yes" -%]

  captagent.service:
    enabled: false
    running: [% is_proxy || is_rtp ? 'true' : 'false' %]
[% END -%]
[% IF turnserver.enable == 'yes' -%]

  coturn.service:
    enabled: false
    running: [% is_rtp ? 'true' : 'false' %]
[% END -%]
[% IF bootenv.dhcp.enable == 'yes' -%]

  dnsmasq.service:
    enabled: false
    running: [% is_mgmt ? 'true' : 'false' %]
[% END -%]
[% IF haproxy.enable == "yes" -%]

  haproxy.service:
    enabled: false
    running: [% is_lb ? 'true' : 'false' %]
[% END -%]
[% IF heartbeat.hb_watchdog.enable == 'yes' -%]

  hb_watchdog.service:
    enabled: true
    running: true
[% END -%]
[% IF kamailio.lb.start == "yes" -%]

  kamailio-lb.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_lb && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF kamailio.proxy.start == "yes" -%]

  kamailio-proxy.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF mediator.enable == 'yes' -%]

  mediator.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF www_admin.enable == 'yes' -%]

  ngcp-panel.service:
    enabled: [% is_mgmt ? 'true' : 'false' %]
    running: [% is_mgmt ? 'true' : 'false' %]
[% END -%]
[% IF rateomat.enable == "yes" -%]

  ngcp-rate-o-mat.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF rtpproxy.enable == "yes" -%]

  ngcp-rtpengine-daemon.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_rtp && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF sems.enable == "yes" -%]

  ngcp-sems.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]

  ngcp-witnessd.service:
    enabled: true
    running: true
[% IF nginx.enable == 'yes' -%]

  nginx.service:
    enabled: true
    running: [% (is_mgmt || is_li_enabled) ? 'true' : 'false' %]
[% END -%]
[% IF prosody.enable == 'yes' -%]

  prosody.service:
    enabled: [% general.process_handler == 'none' ? 'true' : 'false' %]
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF pushd.enable == "yes" -%]

  ngcp-pushd.service:
    enabled: true
    running: [% is_lb ? 'true' : 'false' %]
[% END -%]
[% IF redis.enable == "yes" -%]

  redis-server.service:
    enabled: true
    running: [% (is_rtp || is_proxy || is_db) ? 'true' : 'false' %]
[% END -%]
[% IF ldap.enable == "yes" -%]

  slapd.service:
    enabled: false
    running: [% is_mgmt ? 'true' : 'false' %]
[% END -%]
[% IF pbx.enable == "yes" -%]

  sems-pbx.service:
    enabled: false
    running: [% is_proxy && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF voisniff.daemon.start == 'yes' -%]

  voisniff-ng.service:
    enabled: false
    running: [% (is_proxy || is_lb || is_rtp) && node_state == 'active' ? 'true' : 'false' %]
[% END -%]
[% IF is_mgmt && general.ngcp_type == 'carrier' -%]

  ngcpcfg-api.service:
    enabled: false
    running: true
[% END -%]
[% IF general.license_key != '' -%]

  ngcp-license-client.service:
    enabled: true
    running: true
[% END -%]
