[% END -%]
  tcp6:8083:
    listening: true
    ip: ["::"]

  tcp6:8086:
    listening: true
    ip: ["::"]

[% IF ngcp_type != 'spce' -%]
  tcp:9096:
    listening: true
    ip: ["127.0.0.1"]

[% END -%]
[% IF ngcp_type != 'spce' -%]
  udp:[% heartbeat.port ? heartbeat.port : '694' %]:
