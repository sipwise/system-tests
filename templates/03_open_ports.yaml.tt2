  tcp:2812:
    listening: true
    ip: ["127.0.0.1"]

[% END -%]
  tcp:3306:
    listening: true
    ip: ["[% database.local.dbhost %]"]

[% IF is_lb -%]
  tcp:5060:
    listening: true
    ip: ["[% sip_ext_ips.0 -%]"]

[% END -%]
[% IF is_proxy -%]
  tcp:5062:
    listening: true
    ip: ["127.0.0.1"]

  tcp:5222:
    listening: true
